{
  "log": {
    "disabled": false,
    "level": "error",
    "output": "./log",
    "timestamp": true
  },
  "inbounds": [
    {
      "type": "vmess",
      "tag": "vmess",
      "listen": "::",
      "listen_port": 443, //端口可自定义
      "sniff": true,
      "sniff_override_destination": true,
      "transport": {
        "type": "ws",
        "path": "/websocket", //可自定义
        "max_early_data": 2048,
        "early_data_header_name": "Sec-WebSocket-Protocol"
      },
      "users": [
        {
          "uuid": "", //生成后填入
          "alterId": 0
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "",  //填入域名
        "certificate_path": "/path/to/fullchain.crt", //证书路径，可自定义
        "key_path": "/path/to/private.key"  //私钥路径，可自定义
      },
      "multiplex": {
        "enabled": true,
        "padding": false
      }
    },
    {
      "type": "vless",
      "tag": "reality",
      "listen": "::",
      "listen_port": 31934, //端口可自定义
      "users": [
        {
          "uuid": "", //生成后填入
          "flow": "xtls-rprx-vision"
        }
      ],
      "tls": {
        "enabled": true,
        "server_name": "",  //填入合适的域名
        "reality": {
          "enabled": true,
          "handshake": {
            "server": "", //填入合适的域名
            "server_port": 443
          },
          "private_key": "",  //填入生成的私钥
          "short_id": [
            ""  //可留空，或执行 openssl rand -hex 8 命令生成
          ]
        }
      }
    },
    {
      "type": "hysteria2",
      "tag": "hysteria2",
      "listen": "::",
      "listen_port": 41934, //端口可自定义
      "users": [
        {
          "password": ""  //填入生成的密码
        }
      ],
      "masquerade": "https://www.bing.com", //保留或填入其他合适的域名
      "tls": {
        "enabled": true,
        "alpn": [
          "h3"
        ],
        "certificate_path": "/path/to/fullchain.crt", //证书路径，可自定义
        "key_path": "/path/to/private.key"  //私钥路径，可自定义
      }
    }
  ],
  "outbounds": [
    {
      "type": "direct"
    }
  ],
  "route": {
    "rules": [
      {
        "inbound": ["vmess"],
        "outbound": "direct"
      },
      {
        "inbound": ["reality"],
        "outbound": "direct"
      },
      {
        "inbound": ["hysteria2"],
        "outbound": "direct"
      }
    ]
  }
}
